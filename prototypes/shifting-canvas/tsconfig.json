{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "declaration": true,
      "emitDeclarationOnly": false,
      "outDir": "dist",
      "module": "ESNext",
      "target": "ESNext",
      "lib": ["ESNext", "DOM"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": true,
      "skipLibCheck": true,
      "composite": true
    },
    "exclude": ["dist", "node_modules"],
    "include": ["index.ts", "src/*"]
  }
  