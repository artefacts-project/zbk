{
  "name": "@artefacts/zbk",
  "description": "A monorepo with prototypes and libraries for @artefacts-project",
  "version": "0.0.1",
  "author": "Predrag Vujic",
  "bugs": "https://github.com/artefacts-project/zbk/issues",
  "devDependencies": {
    "syncpack": "^13.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "homepage": "https://github.com/artefacts-project/zbk#readme",
  "keywords": [
    "hypertext",
    "knowledge-base",
    "local-first",
    "note-taking",
    "p2p",
    "pkm",
    "research",
    "zettelkasten",
    "Zettelkasten"
  ],
  "private": true,
  "repository": "artefacts-project/zbk.git",
  "scripts": {
    "dev": "npm run dev --workspace=app",
    "format": "prettier --write src/",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "type-check": "vue-tsc --build --force",
    "upgrade-all": "npx npm-check-updates -u"
  },
  "type": "module",
  "workspaces": [
    "prototypes/*",
    "libraries/*",
    "app"
  ]
}
